{
  "name": "log.pocka.io",
  "version": "1.0.0",
  "description": "Repositry for log.pocka.io",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "create:directories": "find posts -type d|xargs -I{} sh -c 'mkdir -p public/{}'",
    "create:amp-directories": "mkdir -p public/amp",
    "compile:markdown": "find posts -name \"*.md\" -type f|xargs -I{} sh -c 'echo {}|node scripts/md2json.js > public/$(echo {}|sed -e \"s/\\.md$/.json/\")'",
    "compile:amp": "find public/posts -name \"*.json\" -type f|xargs -I{} sh -c 'echo {}|node scripts/make-amp.js > public/amp/$(echo {}|sed -e \"s/\\.json$/.html/\"|sed -e \"s/public\\/posts\\///\")'",
    "compile:js": "NODE_ENV=production webpack -p",
    "build:app": "npm run compile:js",
    "build:posts": "npm run create:directories && npm run compile:markdown && npm run build:list",
    "build:amp": "npm run create:amp-directories && npm run compile:amp",
    "build:list": "find posts -name \"*.md\" -type f|node scripts/make-posts-list.js > public/posts.json",
    "build": "npm run build:posts && npm run build:amp && npm run build:app",
    "dev": "webpack-dev-server --hot --host 0.0.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pocka/log.pocka.io.git"
  },
  "author": "pocka",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pocka/log.pocka.io/issues"
  },
  "homepage": "https://github.com/pocka/log.pocka.io#readme",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "bulma": "^0.6.1",
    "moment": "^2.19.2",
    "vue": "^2.4.1",
    "vue-meta": "^1.1.0",
    "vue-router": "^2.7.0",
    "vuex": "^2.3.1"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.1",
    "css-loader": "^0.28.4",
    "cssnano": "^3.10.0",
    "highlight.js": "^9.12.0",
    "marked": "^0.3.6",
    "mz": "^2.7.0",
    "node-sass": "^4.5.3",
    "postcss": "^6.0.14",
    "postcss-amp": "^1.1.0",
    "postcss-uncss": "^0.15.0",
    "pug": "^2.0.0-rc.4",
    "remove-markdown": "^0.2.2",
    "sass-loader": "^6.0.6",
    "uncss": "^0.16.0",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^12.2.2",
    "vue-template-compiler": "^2.4.1",
    "webpack": "^3.3.0",
    "webpack-dev-server": "^2.5.1",
    "yaml-front-matter": "^3.4.0"
  }
}
